@{
    ViewData["Title"] = "Home Page";
}
@model Usuarios
<div class="text-center">
    <form asp-action="SetUsuario" asp-controller="Home" method="POST">
        
        <div class="form-group col-md-6">

            <label >Nombres</label>
            <input type="text" asp-for="Nombres" class="form-control">
            <span  class="badge rounded-pill bg-warning text-dark" asp-validation-for="Nombres"></span>
        </div>
        <div class="form-group col-md-6">

            <label >Apellidos</label>
            <input type="text" asp-for="Apellidos" class="form-control">
             <span class="badge rounded-pill bg-warning text-dark" asp-validation-for="Apellidos"></span>
        </div>
        <div class="form-group col-md-6">

            <label >Dui</label>
            <input type="text" asp-for="Dui" class="form-control">
              <span class="badge rounded-pill bg-warning text-dark" asp-validation-for="Dui"></span>
        </div>
        <div class="form-group col-md-6">

            <label >Correo</label>
            <input type="text" asp-for="Correo" class="form-control">
              <span class="badge rounded-pill bg-warning text-dark" asp-validation-for="Correo"></span>
        </div>
        <div class="form-group col-md-6">

            <label >EstadoActivo</label>
            <input type="checkbox" asp-for="EstadoActivo" class="form-control">
              <span class="badge rounded-pill bg-warning text-dark" asp-validation-for="EstadoActivo"></span>
        </div>
        <div class="form-group col-md-6">
            <label >FechaNacimiento</label>
            <input asp-for="FechaNacimiento" class="form-control">
             <span class="badge rounded-pill bg-warning text-dark" asp-validation-for="FechaNacimiento"></span>
        </div>
        <div class="form-group col-md-6">
            <label >Edad</label>
            <input asp-for="Edad" class="form-control">
            <span class="badge rounded-pill bg-warning text-dark" asp-validation-for="Edad"></span>
        </div>
        
        <div class="row">
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
    </form>

</div>
